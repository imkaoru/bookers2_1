<% if flash[:notice] %>
  <p id = "notice"><%= flash[:notice] %></p>
<% end %>

<div class="container pt-4 px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'layouts/side', locals: { user: @user, new_book: @new_book } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <%= render 'layouts/bookshelf', books: @books %>
    </div>
  </div>
</div>