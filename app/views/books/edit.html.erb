<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 pt-4 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <div class="errors-box">
          <p><%= @book.errors.count %> errors prohibited this book from being saved:</p>

          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
        <div class="form-group">
          <label for="inputTitle">Title</label>
          <%= f.text_field :title, autofocus: true, id: "inputTitle", class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="inputOpinion">Opinion</label>
          <%= f.text_area :body, id: "Opinion", class: "form-control" %>
        </div>

        <%= f.submit 'Update Book', class: "btn btn-success" %>
      <% end %>

      <p class="mt-4">
        <%= link_to "Show", book_path(@book.id) %> |
        <%= link_to "Back", books_path %>
      </p>
    </div>
  </div>
</div>