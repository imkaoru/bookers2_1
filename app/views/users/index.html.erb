<div class="container pt-4 px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render partial: 'layouts/side', locals: { user: @logging_in_user, new_book: @new_book } %>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="users">
        <h2>Users</h2>

        <table class="table table-hover">
          <thead>
            <tr>
              <th style="width: 30%">image</th>
              <th style="width: 50%">name</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_image(80,80) %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>